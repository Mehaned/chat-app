<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/stylee.css">
    <title>Login</title>
</head>
<body>

<div class="full-page" >
    <div class="navbar">
        <div>
            <a href='/safari'><i class="fab fa-safari"></i> Safari Chat</a>
        </div>
        <nav>
            <!-- <ul id='MenuItems'>
                <li><button class='loginbtn' onclick="document.getElementById('login-form').style.display='block'" style="width:auto;"> <i class="fas fa-sign-in-alt"></i> Login</button></li>
            </ul> -->
        </nav>
    </div>
    <div id='login-form'class='login-page' >
        <div class="form-box">
                <div style="text-align: center;color: crimson;position: absolute;
                font-size: 20px;width: 380px;
">
                 <% if (messages.error) { %>
                    <%= messages.error %>
                    <% } %></div>
            <div class='button-box'>
                <div id='btn'></div>
                <button type='button'onclick='login()'class='toggle-btn'>Log In</button>
                <button type='button'onclick='register()'class='toggle-btn'>Register</button>
            </div>
            <form id='login' class='input-group-login' action="/login" method="POST">
                <label for="email"></label>
                <input type='text'class='input-field' id="email" name='email' placeholder='Email Id' required >
                <label for="password"></label>
                <input type='password'class='input-field' id="password" name='password' placeholder='Enter Password' required>
                <input type='checkbox'class='check-box'><span>Remember Password</span>
                <button type='submit'class='submit-btn'>Log in</button>
            </form>
            <form id='register' class='input-group-register' action='/register' method="POST">
                <label for="name"></label>
                <input type='text'class='input-field'id="name" name='name' placeholder="Name" required>
                <label for="email"></label>
                <input type='email'class='input-field'id="email" name='email' placeholder="Email" required>
                <label for="password"></label>
                <input type='password'class='input-field'id="password" name='password'placeholder="Password" required>
                <input type='checkbox'class='check-box'><span>I agree to the terms and conditions</span>
                <button type='submit'class='submit-btn'>Register</button>
            </form>
        </div>
    </div>
</div>
<script>
    var x=document.getElementById('login');
    var y=document.getElementById('register');
    var z=document.getElementById('btn');
    function register() {
        x.style.left='-400px';
        y.style.left='50px';
        z.style.left='110px';
    }
    function login() {
        x.style.left='50px';
        y.style.left='450px';
        z.style.left='0px';
    }
</script>
